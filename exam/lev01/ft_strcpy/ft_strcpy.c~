#include <stdio.h>

char	*ft_strcpy(char *s1, char *s2)
{
	int i;

	i = 0;
	while(s1[i] != '\0' || s2[i] != '\0')
	{
		s1[i] = s2[i];
		i++;
	}
	return(s1);

}

int		main(void)
{
	char s1 = "aaaaa";
	char s2 = "bbb";

	printf("%s", ft_strcpy(s1, s2));
}
