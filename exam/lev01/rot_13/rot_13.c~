#include <unistd.h>

int		main(int ac, char **av)
{
	int i;
	int x;

	x = 0;
	i = 0;
	if (ac != 2)
	{
		write(1, "\n", 1);
		return (0);
	}
	else
	{
		while (av[1][i] != '\0')
		{
			if((av[1][i] >= 65 && av[1][i] <= 77) || (av[1][i] >= 97 && av[1][i] <= 109))
			{
				x = av[1][i] + 13;
				write(1, &i, 1);
			}
			if((av[1][i] >= 78 && av[1][i] <= 90) || (av[1][i] >= 110 && av[1][i] <= 122))
			{
				x = av[1][i] - 13;
				write(1, &i, 1);
			}
			i++;
		}
		write(1, "\n", 1);
		return (0);
	}
}
